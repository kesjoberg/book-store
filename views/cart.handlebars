<div id="cart">
   <h4>Welcome to your cart! You can update or delete your orders here!</h4>
    {{#each order}}
        <div class=" mb-3 single-book-card" >
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src={{book.bookCover}} id="book-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{book.title}}</h5>
                        <p class="card-text">By: {{book.author}}</p>
                        <p class="card-text"><small class="text-muted">Price: ${{book.price}}</small></p>
                        <div>Quantity Ordered: {{quantity}}</div>
                        <div>Total: ${{total}}</div>
                        <form class="update-cart">
                            <div>
                                <input type="hidden" name="order_id" id="order-id" value="{{id}}" />
                                <input type="hidden" name="book1_id" id="book1_id" value="{{book.id}}" />
                                <input type="hidden" name="book1_price" id="book1_price" value="{{book.price}}" />
                                <input type="hidden" name="user_id" id="qty_user_id" value="{{user_id}}" />
                                <label for"cart">Updated Quantity:</label>
                                <input class="form-imput" type="text" id="quantity">
                            </div>
                            <div class="form-group">
                                <button class="btn btn1" id="cart-btn" type="submit">Update Cart</button>
                                <button class="btn btn1" id="delete-btn" type="submit">Delete From Cart</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    {{/each}}

    <div>
        <h2>Order Total: ${{sum}} </h2>
    </div>
</div>

<script src='/js/cart.js'></script>