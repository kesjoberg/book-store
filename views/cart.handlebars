<div id="cart">
   <h4>Welcome to your cart! You can update or delete your orders here!</h4>
    {{#each order}}
        <div class=" mb-3 single-book-card" >
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src={{book.bookCover}} id="book-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{book.title}}</h5>
                        <p class="card-text">By: {{book.author}}</p>
                        <p class="card-text"><small class="text-muted">Price: ${{book.price}}</small></p>
                        <div>Quantity Ordered: {{quantity}}</div>
                        <div>Total: ${{total}}</div>
                        
                         <button class="btn btn1" id="cart-btn" data-id="{{id}}" type="submit">Update Cart</button>
                        
                    </div>
                </div>
            </div>
        </div>
    {{/each}}

    <div>
        <h2>Order Total: ${{sum}} </h2>
    </div>
</div>

<script src='/js/cart.js'></script>