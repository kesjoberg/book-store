<div class="text-center">
  <h2>Welcome {{username}} to your Profile Page!</h2>

<h4>Orders</h4>
<section class="container-profile">
  {{#each orders as |order|}}
    <section class="card card-text">
      <h5 class="card-title">Title: {{order.book.title}}</h5>
      <img src={{book.bookCover}} id="cart-img" class="card-text align-items-center">
      <p class="card-text">Qty: {{quantity}}</p>
      <p class="card-text">Total: ${{total}} </p>
      <button class="btn btn1 card-text" data-id="{{order.id}}" id="order-update-delete-button" type="submit">Update or Delete Order</button>
    </section>
  {{/each}}
</section>

<h4>Comments</h4>
<section class="container-profile"> 
  {{#each comments as |comment|}}
    <section class="card card-comment card-title">
    <h5 class="card-text">{{comment.book.title}}</h5>
      <p class="card-text"> {{body}}</p>
      <input type="hidden" id="comment-id" value="{{comment.id}}">
      <button class="btn btn1 card-text"id="update-delete-button" data-id="{{comment.id}}" type="submit">Update or Delete Comment</button> 
    </section>
  {{/each}}
</section>  

</div>
<script src="/js/profile.js"></script>