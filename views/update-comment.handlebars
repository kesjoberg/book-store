  <div class="post-card">
    <h2 class="page-title">Edit Comment</h2>
    <form class="form edit-comment-form">
      <div class="form-group">
        <label for="title-comment"  >Book: {{comment.book.title}}</label>
        <input type="hidden" name="comment-id" id="comment-id" value="{{comment.id}}" />
        <input type="hidden" name="user-id" id="user-id" value="{{comment.user_id}}" />
        <input type="hidden" name="book-id" id="book-id" value="{{comment.book_id}}" />
 
      </div>
      <div class="form-group">
        <label for="description-comment">Your Comment:</label>
        <textarea id="comment-body" >{{comment.body}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn1" id="update-button" data-id="{{comment.id}}" type="Update">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn1" id="delete-button" data-id="{{comment.id}}" type="Delete">Delete</button>
      </div>
    </form>
  </div>

  <script src="/js/edit-comment.js"></script>